// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

model Categories {
  id            String           @id
  name          String        
  description   String?
  image         String?
  parents       Parents[]
}

model Parents {
  id            String           @id 
  name          String        
  description   String?
  image         String?
  category      Categories    @relation(fields: [CategoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  CategoryId    String
  
  children      Children[]
}

model Children {
  id            String           @id
  name          String        
  description   String?
  image         String?
  parent        Parents       @relation(fields: [ParentId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  ParentId      String

  items         Items[]
}

model Items {
  id            String           @id
  name          String        
  description   String?
  brand         String?
  model         String?
  quantity      Int?
  price         Float?
  images        String[]
  child         Children         @relation(fields: [ChildId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  
  ChildId       String
}

model Customers {
  id                String           @id
  name              String
  phone             String
  totalPurchase     Int
  order             Order[]

} 

model Order {
  id                      Int               @id @default(autoincrement())
  productId               String
  productName             String
  productPrice            Int            
  orderedQuantity         Int
  product                 Customers         @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
